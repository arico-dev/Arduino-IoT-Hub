<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coverLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F1F5F9"
    tools:context=".CoverActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARDUINO IoT HUB"
        android:textColor="#1e3a8a"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Contenedor para los autores -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autores:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666" />

        <TextView
            android:id="@+id/author1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anthony Rico Encinas"
            android:textColor="#666" />

        <TextView
            android:id="@+id/author2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felipe Zurita Hidalgo"
            android:textColor="#666" />

        <TextView
            android:id="@+id/author3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matías Cerda González"
            android:textColor="#666" />
    </LinearLayout>

    <!-- Texto inferior -->
    <TextView
        android:id="@+id/tapToContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tocar para continuar ↓"
        android:textColor="#3b82f6"
        android:textSize="16sp" />

</LinearLayout>
